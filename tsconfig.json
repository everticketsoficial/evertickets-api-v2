{
  "compilerOptions": {
    // File Layout
    "baseUrl": "./",
    "outDir": "dist",

    //
    "target": "es2022",
    "module": "commonjs",

    // Recommended Options
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],

    //
    "paths": {
      "@/modules/*": ["./src/modules/*"],
      "@/config/*": ["./src/config/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/types/*": ["./src/types/*"]
    },

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
